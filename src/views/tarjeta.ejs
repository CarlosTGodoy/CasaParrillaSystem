      <label for="nombre-titular">Titular de la tarjeta:</label>
      <input type="text" id="nombre-titular" placeholder="NOMBRE APELLIDO"><br>
    </div>
    <div class="cvv">
      <label for="cvv">CVV:</label>
      <input type="text" id="cvv" placeholder="XXX"><br>
    </div>
  </form>
  <div class="total">
